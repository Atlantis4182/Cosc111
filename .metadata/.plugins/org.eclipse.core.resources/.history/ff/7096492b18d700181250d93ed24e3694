package ex6;

public class Worksheet2 {
public static void main(String[] args) {
	
	int r = 25;
	String abc = "abcdefghijklmnopqrstuvwxyz";
	System.out.println(abc.charAt(r));

	String s = "adre32rd";
	int passIndexABC = 0;
	int passLength = 0;
	
	for(int i = 0; passIndexABC < s.length(); i++) {
		if(s.toLowerCase().charAt(passIndexABC) == abc.charAt((i)) || i < abc.length()){
			passIndexABC++;
			passLength++;
			i = 0;
		} else if (i== (1- abc.length())) {
			passIndexABC++;
			i=0;
		}
	}
}}
