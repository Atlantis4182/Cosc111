package assignment6;

import java.util.Scanner;

public class Q1 {
	public static void main(String[] args) {
		
		Scanner in = new Scanner(System.in);
		
		double avg;
		int i = 0;
		double sum = 0;
		int[] array = new int[2];
		
		for (i = 0; array[i] > 0 || array.length > i ; i++) {
			System.out.print("Enter a new score(-1 to end): ");
			array[i] = in.nextInt();
			if (array[i] != -1) 
				sum += array[i];
		}
		
		avg = sum/i;
		
		System.out.printf("Average: %.2f\n", avg);
		System.out.printf("Total number of scores: %d\n", i);
		
		int counterAbove = 0;
		int counterBelow = 0;
		for (i = 0; i < array.length; i++) {
			if (array[i] >= avg) {
				counterAbove++;
			} else if (array[i] < avg) 
				counterBelow++;
		}
		
		System.out.printf("Number of score above or equal to the average: %d\n",counterAbove);
		System.out.printf("Number of score below the average: %d\n", counterBelow);
		
		in.close();
	}
}
