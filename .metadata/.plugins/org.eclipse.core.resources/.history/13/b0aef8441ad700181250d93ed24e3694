package ex6;

public class Worksheet2 {
public static void main(String[] args) {
	
	int r = 25;
	String abc = "abcdefghijklmnopqrstuvwxyz";
	System.out.println(abc.charAt(r));

	String s = "adre32rd";
	int passIndexABC = 0;
	int passLength = 0;
	
	for(int i = 0; passIndexABC < s.length(); i++) {
		if(s.toLowerCase().charAt(passIndexABC) == abc.charAt((i))){
			passIndexABC++;
			passLength++;
			i = 0;
		} else if (i== abc.length()) {
			passIndexABC++;
			i=0;
		}
	}
	
	System.out.println(passIndexABC);
	System.out.println(passLength);
	
}}
