package assignment5;

public class Q2 {
	public static void main(String[] args) {
	
//		int sum = 0; Why doesnt this work here?!? its in the main scope

		for (int i = 1; i <= 10000; i++) {
			int sum = 0;
		
			for(int a = 1; a < i; a++) {
				if ((i%a) == 0) {
					sum = sum + a;
				}
				
			}
			if (sum == i) 
				System.out.println(sum);
		}  
		
	}
}